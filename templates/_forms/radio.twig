<div class="form__input-wrap {{ blockClass|default('') }}__input-wrap">
  <label class="form__checkbox">
    <span class="form__checkout-label">{{ label|default('') }}</span>
    <input type="radio"
    {% if value is defined %}
      value="{{ value }}" 
    {% endif %}
    name="{{ name|default('') }}" {{ checked|default(false) ? 'checked' : ''}} 
    id="{{ id|default('') }}"
    class="{{ class|default('') }}">
    <span class="form__checkmark"></span>
  </label>
</div>