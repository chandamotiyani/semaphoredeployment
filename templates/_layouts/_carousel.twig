<div class="carousel js-carousel{{ hijackScrolling is defined and hijackScrolling ? ' --hijack-scroll' : '' }} {{ class|default }}">
	<div class="carousel__items js-carousel-items">
		{% for item in items %}
			<div class="carousel__item {{ item.class|default }}">
				{% block item %}{% endblock %}
			</div>
		{% endfor %}
	</div>
</div>