{% embed '_layouts/_section.twig' with { component: { sectionHeader: component.sectionHeader | default }, colourScheme: 'white' } %}
	{% block body %}
		{% embed '_partials/_card-list.twig' with { type: 'collage-staggered', items: items, appendJsClass: true } only %}
			{% block item %}
				{% include "_cards/_card-collage-dim.twig" with item only %}
			{% endblock %}
		{% endembed %}
	{% endblock %}
		{% block footer %}{% spaceless %}
			{% if buttons is defined and buttons | length %}{% include '_partials/_section-footer.twig' with { buttons: buttons } only %}{% endif %}
		{% endspaceless %}{% endblock %}
{% endembed %}