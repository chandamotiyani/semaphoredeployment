{% embed '_layouts/_section.twig' with { constrained: true } %}
	{% block body %}
		<div class="heading-with-text">
			{% if super is defined and super | length %}
				<div class="heading-with-text__super">{{ super | typogrify(true) }}</div>
			{% endif %}

			{% if heading is defined and heading | length %}
				<h2 class="heading-with-text__heading">{{ heading | typogrify(true) }}</h2>
			{% endif %}

			{% if copy is defined and copy | length %}
				<div class="heading-with-text__copy">{{ copy | typogrify(true) }}</div>
			{% endif %} 

			{% if buttons is defined and buttons %}
				<div class="heading-with-text__buttons">
					{% for button in buttons %}
						<a class="heading-with-text__button" href="{{ button.entry.url }}">{{ button.label }}</a>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	{% endblock %}
{% endembed %}