{% embed '_layouts/_section.twig' %}
	{% block body %}
		{% set fields = fields | merge({ constrainImageTo: 'square' }) %}
		{% embed "_cards/_card-text-with-image.twig" with fields only %}
			{% block details %}
				{{ parent() }}
				{% if not currentUser %}{# hide newsletter field if signed in #}
					<div class="card-text-with-image__subscribe-field">
						{% include "_forms/newsletter" with { hash: '#module-newsletter', id: 'module-newsletter' } %}
					</div>
				{% endif %}
			{% endblock %}
	{% endembed %}
	{% endblock %}
{% endembed %}